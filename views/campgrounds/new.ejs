<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center mb-3">Ajouter un campement</h1>
    <div class="col-6 offset-3 mb-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Nom du campement</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Cela me semble bon !
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Localisation</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Cela me semble bon !
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    Cela me semble bon !
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Droits de campement</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        Cela me semble bon !
                      </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Cela me semble bon !
                  </div>
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Ajouter un campement</button>
            </div>
        </form>
        <a href="/campgrounds">Tous les campements</a>
    </div>
</div>


